<!-- Movie Div *** take out comments and put double handle bars around eaches and visibilities-->
{{#each movie}}

  <div class="col-md-3 poster-container" id="{{key}}"><img alt='{{Title}}' class='poster' id='{{key}}' src="http://img.omdbapi.com/?apikey=7c212437&i={{key}}" width="200px" height="300px">

  <a href="#" class="deleteBtn" key="{{key}}">
      <span class="glyphicon glyphicon-trash"></span>
  </a>

  
   	 <!-- Watched Btns -->
{{#if watched}}
<input type="number" class="rating" data-min="1" data-max="5" data-step="1">
{{/if}}
{{#unless watched}}
    	<button type="button" class="btn watchedBtn">Watched</button>
{{/unless}}
  </div>
{{/each}}